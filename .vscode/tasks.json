{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "[Release] Build project",
			"command": "cmake",
			"args": [
				"--build",
				"${command:cmake.buildDirectory}",
				"-j",
				"8"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "[Release] Re-build project",
			"command": "cmake",
			"args": [
				"--build",
				"${command:cmake.buildDirectory}",
				"--clean-first",
				"-v",
				"-j",
				"8"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"type": "shell",
			"label": "Clean project",
			"command": "cmake",
			"args": [
				"--build",
				"${command:cmake.buildDirectory}",
				"--target",
				"clean"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "[Release] CubeProg (IDE): Flash (SWD)",
			"command": "C:/Program Files/STMicroelectronics/STM32Cube/STM32CubeProgrammer/bin/STM32_Programmer_CLI",
			"args": [
				"--connect",
				"port=swd",
				"--download",
				"${command:cmake.launchTargetPath}",
				"-v",
				"-hardRst",
				"-g"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "[Release] CubeProg (VSCode): Flash (SWD)",
			"command": "${userHome}/AppData/Local/stm32cube/bundles/programmer/2.21.0/bin/STM32_Programmer_CLI.exe",
			"args": [
				"--connect",
				"port=swd",
				"--download",
				"${command:cmake.launchTargetPath}",
				"-v",
				"-hardRst",
				"-g"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "[Release] JLink: Flash (SWD)",
			"command": "C:/Program Files/SEGGER/JLink_V854/JLink",
			"args": [
				"-CommandFile",
				"./scripts/program.jlink",				
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		},		
	]
}